{
  "name": "messenger-project",
  "version": "1.0.0",
  "scripts": {
    "dev parcel": "parcel src/index.html --port 3000 --no-cache",
    "dev": "webpack serve --open --config ./webpack.config.js",
    "start": "webpack serve --open --config ./webpack.config.js",
    "build": "webpack --config ./webpack.config.js",
    "watch-css": "parcel watch src/comm on/styles/style.css --dist-dir styles",
    "lint": "eslint ./src/**/.ts",
    "lint-fix": "eslint ./src/**/**/*.ts ./styles/style.css --fix ",
    "stylelint": "npx stylelint \"**/*.css\" --fix",
    "prettier": "prettier --write  ./src/**/**/*.ts",
    "clean": "rm -rf node_modules/",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint-fix prettier stylelint"
    }
  },
