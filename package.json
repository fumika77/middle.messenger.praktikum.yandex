    "@types/express": "4.17.13",
    "@types/jest": "28.1.2",
    "@types/jsdom": "16.2.14",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "babel-jest": "28.1.1",
    "copy-webpack-plugin": "11.0.0",
    "dotenv-webpack": "7.1.0",
