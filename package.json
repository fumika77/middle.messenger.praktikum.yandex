{
  "name": "messenger-project",
  "version": "1.0.0",
  "scripts": {
    "dev": "cp -R static dist && parcel src/index.html --port 3000 --no-cache",
    "start": "node index.js",
    "build": "parcel build src/index.html && cp -R static dist",
    "watch-css": "parcel watch src/common/styles/style.css --dist-dir styles",
    "lint": "eslint ./src/**/.ts",
    "lint-fix": "eslint ./src/**/**/*.ts --fix ",
    "stylelint": "npx stylelint \"**/*.css\" --fix",
    "prettier": "prettier --write  ./src/**/**/*.ts"
  },
  "alias": {
    "core": "./src/core",
    "views": "./src/views",
    "store": "./src/store",
    "services": "./src/services",
    "utils": "./src/utils"
  },
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "1.0.9",
    "@types/express": "4.17.13",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "chai": "4.3.6",
    "eslint": "8.12.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "express": "4.17.3",
    "express-handlebars": "6.0.3",
    "mocha": "10.0.0",
    "nanoid": "3.3.2",
    "parcel": "2.4.0",
    "parcel-plugin-handlebars-precompile": "1.0.2",
    "postcss-import": "14.0.2",
    "postcss-nested": "5.0.6",
    "postcss-url": "10.1.3",
    "prettier": "2.5.1",
    "stylelint": "14.6.1",
    "stylelint-config-standard": "25.0.0",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@parcel/config-default": "2.4.0"
  }
}
